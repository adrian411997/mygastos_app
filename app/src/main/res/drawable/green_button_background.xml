<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2E7D32" /> <!-- Color de presión (más oscuro) -->
            <corners android:radius="8dp" /> <!-- Radio de esquinas -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Color normal (verde) -->
            <corners android:radius="8dp" /> <!-- Radio de esquinas -->
        </shape>
    </item>
</selector>